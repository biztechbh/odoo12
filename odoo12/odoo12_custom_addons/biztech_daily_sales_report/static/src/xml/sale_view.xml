<?xml version="1.0" encoding="UTF-8"?>
<templates id="sales_dashboard_report">
    <div t-name="DailySalesReport" style="width:100%">
        <div class="col-md-12 summary" style="margin-top:15px;display:none;float: left;width: 100%;">
            <div style="margin-top:15px;width:100%;float:left">
                <div class="card">
                    <div class="card-body row">
                        <div class="row col-md-12">
                            <div class="col-md-4 report_name"/>
                        <div class="col-md-2 report_so_states"/>
                        <div class="col-md-4 dates"/>
                        <div class="col-md-2" style="text-align:right;">
                            <a class="export_to_pdf btn btn-default" title="Export As PDF">
                                <i class="fa fa-file-pdf-o fa-2x" aria-hidden="false" style="color:#7c7bad;display: inline-block !important;"/>
                            </a>
                            <a class="export_to_excel btn btn-default" title="Export As Excel">
                                <i class="fa fa-file-excel-o fa-2x" aria-hidden="false" style="color:#7c7bad;display: inline-block !important;"/>
                            </a>
                            <a class="click_to_refresh btn btn-default" title="Reports">
                                <i class="fa fa-list fa-2x" aria-hidden="false" style="color:#7c7bad;display: inline-block !important;"/>
                            </a>
                        </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
                <div class="table_per_date_container" style="float: left;width: 100%;"/>
        </div>
        <div class="col-md-12">
            <div class="grand_table_per_date_container" style="float: left;width: 100%;display:none;background:white;">
                <table class="table table-bordered table-hover">
                    <tfoot>
                        <tr>
                            <th/>
                            <th/>
                            <th/>
                            <th/>
                            <th/>
                            <th>QTY</th>
                            <th>Rate</th>
                            <th>Vat</th>
                            <th>Discount</th>
                            <th>Net Amount</th>
                        </tr>
                        <tr class="tr_grand_total"/>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</templates>